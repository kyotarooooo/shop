<h1>ユーザー一覧</h1>

<% @users.each do |user| %>
	<div class = "field">
		<%= user.name %>
	</div>
<% end %>

<% if user_signed_in? %>
	<%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
	<%= link_to "商品を登録", new_product_path %>
	<%= link_to "商品一覧", products_path %>
<% else %>
	<%= link_to "新規登録", new_user_registration_path %>
	<%= link_to "ログイン", new_user_session_path %>
<% end %>
